<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardUseCompatPadding="false"
            card_view:cardElevation="2dp"
            android:layout_margin="15dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ID Number"
                    android:textColor="#000"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/id_number"
                    android:inputType="number"
                    style="@style/SwingersEditTextStyle"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textColor="#000"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/name"
                    android:inputType="text"
                    style="@style/SwingersEditTextStyle"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Surname"
                    android:textColor="#000"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/surname"
                    android:inputType="text"
                    style="@style/SwingersEditTextStyle"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="SEARCH"
                    android:id="@+id/search_btn"
                    android:padding="12dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="12dp"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            card_view:cardUseCompatPadding="false"
            card_view:cardElevation="2dp"
            android:layout_margin="15dp"
            android:visibility="gone"
            android:id="@+id/results_panel">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#000"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:id="@+id/no_results"/>
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/title_bg"
                        >
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textColor="#fff"
                            android:text="ID No"
                            android:paddingTop="3dp"
                            android:paddingBottom="3dp"
                            android:layout_weight=".30"
                            android:ellipsize="marquee"
                            android:singleLine="true"
                            android:textSize="12sp"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textColor="#fff"
                            android:text="Name"
                            android:paddingTop="3dp"
                            android:paddingBottom="3dp"
                            android:layout_weight=".20"
                            android:ellipsize="marquee"
                            android:singleLine="true"
                            android:textSize="12sp"
                            android:layout_gravity="left"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textColor="#fff"
                            android:text="Surname"
                            android:paddingTop="3dp"
                            android:paddingBottom="3dp"
                            android:layout_gravity="left"
                            android:layout_weight=".20"
                            android:ellipsize="marquee"
                            android:singleLine="true"
                            android:textSize="12sp"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textColor="#fff"
                            android:text="Deceased"
                            android:paddingTop="3dp"
                            android:paddingBottom="3dp"
                            android:layout_gravity="left"
                            android:layout_weight=".15"
                            android:ellipsize="marquee"
                            android:singleLine="true"
                            android:textSize="12sp"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#fff"
                            android:text="Dec Date"
                            android:paddingTop="3dp"
                            android:paddingBottom="3dp"
                            android:layout_gravity="left"
                            android:layout_weight=".15"
                            android:ellipsize="marquee"
                            android:singleLine="true"
                            android:textSize="12sp"/>
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textColor="#000"
                            android:id="@+id/res_id_number"
                            android:paddingTop="3dp"
                            android:paddingLeft="3dp"
                            android:paddingBottom="3dp"
                            android:layout_weight=".30"
                            android:ellipsize="marquee"
                            android:singleLine="true"
                            android:textSize="12sp"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textColor="#000"
                            android:id="@+id/res_name"
                            android:paddingTop="3dp"
                            android:paddingBottom="3dp"
                            android:layout_weight=".20"
                            android:ellipsize="marquee"
                            android:singleLine="true"
                            android:textSize="12sp"
                            android:layout_gravity="left"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textColor="#000"
                            android:id="@+id/res_surname"
                            android:paddingTop="3dp"
                            android:paddingBottom="3dp"
                            android:layout_gravity="left"
                            android:layout_weight=".20"
                            android:ellipsize="marquee"
                            android:singleLine="true"
                            android:textSize="12sp"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textColor="#000"
                            android:id="@+id/res_dec"
                            android:paddingTop="3dp"
                            android:paddingBottom="3dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_weight=".15"
                            android:ellipsize="marquee"
                            android:singleLine="true"
                            android:textSize="12sp"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#000"
                            android:id="@+id/res_dec_date"
                            android:paddingTop="3dp"
                            android:paddingBottom="3dp"
                            android:layout_gravity="left"
                            android:layout_weight=".15"
                            android:ellipsize="marquee"
                            android:singleLine="true"
                            android:textSize="12sp"/>
                    </TableRow>
                </TableLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/employers"
                    android:visibility="gone">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorError"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="#fff"
                            android:layout_gravity="center"
                            android:id="@+id/title_employers"
                            android:padding="3dp"/>

                    </LinearLayout>
                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/employers_list"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/telephones"
                    android:visibility="gone">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorError"
                        android:orientation="horizontal"
                        android:padding="3dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#fff"
                        android:layout_gravity="center"
                        android:id="@+id/title_telephones"/>
                    </LinearLayout>
                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:id="@+id/telephones_list"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/addresses"
                    android:visibility="gone">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorError"
                        android:orientation="horizontal"
                        android:padding="3dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#fff"
                        android:layout_gravity="center"
                        android:id="@+id/title_addresses"/>
                    </LinearLayout>
                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/addresses_list"
                        />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>
